{
  "name": "reactboilerplate",
  "version": "1.0.0",
  "description": "Basic React Boilerplate - Windows + Mac Compatible",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./webpack_config/webpack.prod.js",
    "clean": "npm run clean:build && npm run clean:test && npm run clean:modules",
    "clean:build": "rimraf ./dist",
    "clean:test": "rimraf ./coverage",
    "clean:modules": "rimraf node_modules && npm install",
    "dev": "npm run start:development",
    "dev:client": "webpack-dev-server --mode development --config ./webpack_config/webpack.dev.js --port 3000 --hot",
    "lint": "eslint . || exit 0",
    "lint:fix": "eslint . --fix || exit 0",
    "start": "npm run build && cross-env NODE_ENV=production nodemon ./src/server/server.js",
    "start:development": "cross-env NODE_ENV=development nodemon ./src/server/server.js",
    "test": "jest . --verbose --colors --runInBand --forceExit"
  },
  "author": "James Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jchen31995/Personal-React-Redux-Boilerplate.git"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "dotenv-safe": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "eslint-config-airbnb-base": "^13.0.0",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "hawk": "^7.0.7",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.4.2",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "path": "^0.12.7",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}
